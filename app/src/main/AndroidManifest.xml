        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.baretto.scrumquiz.psm1.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.baretto.scrumquiz.psm1.ResultActivity"/>
        <activity android:name="fr.baretto.scrumquiz.psm1.QuestionActivity" />
        <activity android:name="fr.baretto.scrumquiz.psm1.AboutActivity"></activity>
    </application>

</manifest>